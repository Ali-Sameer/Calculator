<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.CalculateActivity">




    <TextView
        android:id="@+id/inputtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#29BA0A"
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:paddingRight="30dp"
        android:textSize="40sp"/>


    <TextView
        android:id="@+id/outputtext"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text=""
        android:textColor="#29BA0A"
    android:gravity="right"
    android:layout_marginTop="150dp"
    android:paddingRight="30dp"
    android:textSize="40sp"/>



    <ImageView
        android:id="@+id/cutbutton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/del" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_marginTop="300dp"
        android:layout_height="1dp"
       android:background="#807B7B"/>

    <LinearLayout
      
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            android:padding="5dp">


            <ImageView
                android:id="@+id/clear"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:layout_marginRight="10dp"

                android:background="@drawable/cc" />


            <ImageView
                android:id="@+id/oc"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:layout_marginRight="10dp"

                android:background="@drawable/oc" />

            <ImageView
                android:id="@+id/bc"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/bc" />

            <ImageView
                android:id="@+id/devide"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:background="@drawable/dvd" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            android:padding="5dp">

            <ImageView
                android:id="@+id/seven"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/svn" />

            <ImageView
                android:id="@+id/eight"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/et" />

            <ImageView
                android:id="@+id/nine"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/nin" />

            <ImageView
                android:id="@+id/multyple"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:background="@drawable/multy" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            android:padding="5dp">

            <ImageView
                android:id="@+id/four"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/phore" />

            <ImageView
                android:id="@+id/five"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/fiv" />

            <ImageView
                android:id="@+id/six"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/sx" />

            <ImageView
                android:id="@+id/minus"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:background="@drawable/r" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            android:padding="5dp">

            <ImageView
                android:id="@+id/one"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/noone" />

            <ImageView
                android:id="@+id/two"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/to" />

            <ImageView
                android:id="@+id/three"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/thri" />

            <ImageView
                android:id="@+id/plus"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:background="@drawable/pls" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="horizontal"
            android:padding="5dp">


            <ImageView
                android:id="@+id/percntge"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:layout_marginRight="10dp"

                android:background="@drawable/prec" />

            <ImageView
                android:id="@+id/zero"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/ziro" />

            <ImageView
                android:id="@+id/dot"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/fs" />

            <ImageView
                android:id="@+id/equal"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:background="@drawable/eql" />


        </LinearLayout>


    </LinearLayout>

    

</RelativeLayout>